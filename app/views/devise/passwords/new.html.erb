<div class="container flex flex-col items-center my-16">
  <h2 class="text-2xl font-bold mb-5">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, placeholder:"Email", class:"rounded-md" %>
    </div>

    <div class="actions">
      <%= f.submit "Send", class:"rounded-lg py-1 px-5 my-5 bg-dollar-split_blue hover:bg-dollar-triad_blue text-white block font-medium mx-auto cursor-pointer" %>
    </div>
  <% end %>

</div>
