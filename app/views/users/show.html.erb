<div class="container">
  <h1 class="text-center my-16 font-bold text-4xl">User profile</h1>
  <div class="w-1/4 mx-auto flex flex-col items-center">
    <span>Your avatar:
      <% if current_user.provider != 'google_oauth2' %>
        <%= gravatar_for(current_user) %>
      <% else %>
        <% if current_user.avatar_url %>
          <%= image_tag current_user.avatar_url, style: "max-width: 128px; hight: auto; border-radius: 50%;" %>
        <% end %>
      <% end %>
    </span>
  </div>
  <div class="flex flex-col">
    <span>Your name: <%= @user.name %></span>
    <span>Your Email: <%= @user.email %></span>
  </div>
  <%= link_to "Edit you credentials", edit_user_registration_path %>
</div>
