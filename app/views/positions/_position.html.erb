<div id="<%= dom_id position %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Symbol:</strong>
    <%= position.symbol %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Quantity:</strong>
    <%= position.quantity %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Cost per share:</strong>
    <%= position.cost_per_share %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this position", "/portfolios/#{params[:portfolio_id]}/positions/#{position.id}", class: "rounded-lg py-3 px-5 bg-cyan-300 inline-block font-medium" %>
    <%= link_to 'Edit this position', "/portfolios/#{params[:portfolio_id]}/positions/#{position.id}/edit", class: "rounded-lg py-3 ml-2 px-5 bg-cyan-500 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
