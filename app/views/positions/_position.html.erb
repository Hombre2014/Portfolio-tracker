<div id="<%= dom_id position %>", class="container flex">
  <div class="my-5 mr-5">
    <span class="inline-block font-medium mb-1">Symbol:</span>
    <span class="font-bold"><%= position.symbol %></span>
  </div>

  <div class="my-5 mr-5">
    <span class="inline-block font-medium mb-1">Quantity:</span>
    <span class="font-bold"><%= sprintf('%.2f', position.quantity.to_f) %></span>
  </div>

  <div class="my-5 mr-5">
    <span class="inline-block font-medium mb-1">Cost per share:</span>
    <span class="font-bold"><%= number_to_currency(position.cost_per_share) %></span>
  </div>
</div>

<% if action_name != "show" %>
  <%= link_to "Show", "/users/#{current_user.id}/portfolios/#{params[:portfolio_id]}/positions/#{position.id}", class: "rounded-lg py-1 px-3 bg-dollar-split_blue inline-block font-medium text-white" %>
  <%= link_to 'Edit', "/users/#{current_user.id}/portfolios/#{params[:portfolio_id]}/positions/#{position.id}/edit", class: "rounded-lg py-1 ml-2 px-3 bg-dollar-triad_blue inline-block font-medium text-white" %>
  <hr class="mt-6">
<% end %>
