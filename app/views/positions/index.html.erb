<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Positions</h1>
    <%= link_to 'New position', new_user_portfolio_position_path, class: "rounded-lg py-1 px-3 bg-dollar text-white block font-medium" %>
    <%= link_to "Portfolios", user_portfolios_path, class: "rounded-lg py-1 px-3 bg-dollar text-white block font-medium" %>
  </div>

  <div id="positions" class="min-w-full">
    <%= render @positions %>
  </div>
</div>
