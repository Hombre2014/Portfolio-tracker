<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="container flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= current_user.name %>'s Portfolios</h1>
    <div data-controller="hello"></div>
    <%= link_to 'New portfolio', new_user_portfolio_path, class: "rounded-lg py-1 px-3 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="portfolios" class="min-w-full">
    <%= render @portfolios %>
  </div>
</div>
