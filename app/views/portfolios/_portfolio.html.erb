<div id="<%= dom_id portfolio %>" >
  <span class="my-5 inline-block mr-5">
    <span class="block font-medium mb-1 inline-block">Name:</span>
    <span class="font-bold"><%= portfolio.name %></span>
  </span>

  <span class="my-5 inline-block mr-5">
    <span class="block font-medium mb-1 inline-block">Acc. number:</span>
    <span class="font-bold"><%= portfolio.acc_number %></span>
  </span>

  <table class="table-auto mb-6 border-collapse border border-slate-400">
    <thead>
      <tr class="text-xs">
        <th class="border border-slate-300 px-4">Symbol</th>
        <th class="border border-slate-300 px-4">Quantity</th>
        <th class="border border-slate-300 px-4">Cost/share</th>
        <th class="border border-slate-300 px-4">Price</th>
        <th class="border border-slate-300 px-4">Change</th>
        <th class="border border-slate-300 px-4">Change %</th>
        <th class="border border-slate-300 px-4">Day gain</th>
        <th class="border border-slate-300 px-4">Day gain %</th>
        <th class="border border-slate-300 px-4">Gain</th>
        <th class="border border-slate-300 px-4">Gain %</th>
        <th class="border border-slate-300 px-4">Comm. & Fees</th>
        <th class="border border-slate-300 px-4">Total Cost</th>
        <th class="border border-slate-300 px-4">Real. C/F</th>
        <th class="border border-slate-300 px-4">Real. P/L</th>
        <th class="border border-slate-300 px-4">Value</th>
        <th class="border border-slate-300 px-4">Date</th>
      </tr>
    </thead>
    <tbody>
    <% @positions.each do |position| %>
      <% position.commission_and_fee == nil ? position.commission_and_fee = 0 : position.commission_and_fee %>
      <% position_cost = position.quantity * position.cost_per_share %>
      <% if position.portfolio_id == portfolio.id %>
        <tr class="text-sm">
          <td class="border border-slate-300 px-4"><%= position.symbol %></td>
          <td class="border border-slate-300 px-4"><%= position.quantity %></td>
          <td class="border border-slate-300 px-4"><%= number_to_currency(position.cost_per_share) %></td>
          <% if position.symbol != 'Cash' %>
            <% price = @finnhub_client.quote(position.symbol) %>
            <% position_value = position.quantity * price.c %>
            <% red_or_green = price.d > 0 ? 'text-green-600' : 'text-red-600' %>
            <% red_or_green_all = position_value - position_cost > 0 ? 'text-green-600' : 'text-red-600' %>
            <td class="border border-slate-300 px-4"><%= number_to_currency(price.c) %></td>
            <td class="border border-slate-300 px-4 <%= red_or_green %>"><%= number_to_currency(price.d) %></td>
            <td class="border border-slate-300 px-4 <%= red_or_green %>"><%= number_to_percentage(price.dp.round(2)).to_f %>%</td>
            <td class="border border-slate-300 px-4 <%= red_or_green %>"><%= number_to_currency(position.quantity * price.d) %></td>
            <% @total_day_gain += position.quantity * price.d %>
            <% @total_last_close += position.quantity * price.pc %>
            <td class="border border-slate-300 px-4 <%= red_or_green %>"><%= number_to_percentage((position.quantity * price.d / position_cost * 100).round(2)).to_f %>%</td>
            <td class="border border-slate-300 px-4 <%= red_or_green_all %>"><%= number_to_currency(position_value - position_cost) %></td>
            <% @total_position_gain += position_value - position_cost %>
            <td class="border border-slate-300 px-4 <%= red_or_green_all %>"><%= number_to_percentage(((position_value - position_cost) / position_cost * 100).round(2)).to_f %>%</td>
            <td class="border border-slate-300 px-4"><%= number_to_currency(position.commission_and_fee) %></td>
            <% @total_comm_and_fee += position.commission_and_fee %>
            <td class="border border-slate-300 px-4"><%= number_to_currency(position_cost) %></td>
            <td class="border border-slate-300 px-4"> - </td>
            <td class="border border-slate-300 px-4"> - </td>
            <td class="border border-slate-300 px-4"><%= number_to_currency(position_value) %></td>
            <% @total_portfolio_value += position_value %>
            <% @total_last_close += position.quantity * price.pc %>
            <td class="border border-slate-300 px-4"><%= position.open_date %></td>
          <% else %>
            <td class="border border-slate-300 px-4"><%= number_to_currency(1) %></td>
            <% 8.times do %>
              <td class="border border-slate-300 px-4"> - </td>
            <% end %>
            <td class="border border-slate-300 px-4"> - </td>
            <td class="border border-slate-300 px-4"> - </td>
            <td class="border border-slate-300 px-4"><%= number_to_currency(position_cost) %></td>
            <% @total_portfolio_value += position.quantity %>
            <td class="border border-slate-300 px-4"><%= position.open_date %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
    </tbody>
    <tfoot>
      <tr class="text-sm">
        <% get_profit_loss %>
        <td class="border border-slate-300 px-4 font-bold">Total</td>
        <% 5.times do %>
          <td class="border border-slate-300 px-4"></td>
        <% end %>
        <% red_or_green = @total_day_gain > 0 ? 'text-green-600' : 'text-red-600' %>
        <% red_or_green_all = (@total_portfolio_value - portfolio.cash) >= 0 ? 'text-green-600' : 'text-red-600' %>
        <td class="border border-slate-300 px-4 <%= red_or_green %>"><%= number_to_currency(@total_day_gain) %></td>
        <td class="border border-slate-300 px-4 <%= red_or_green %>"><%= number_to_percentage((@total_day_gain / portfolio.cash * 100).round(2)).to_f %>%</td>
        <td class="border border-slate-300 px-4 <%= red_or_green_all %>"><%= number_to_currency(@total_position_gain + @pl) %></td>
        <td class="border border-slate-300 px-4 <%= red_or_green_all %>"><%= number_to_percentage(((@total_position_gain + @pl) / (@total_portfolio_value - (@total_position_gain + @pl)) * 100).round(2)).to_f %>%</td>
        <td class="border border-slate-300 px-4 text-red-600">-<%= number_to_currency(@total_comm_and_fee) %></td>
        <td class="border border-slate-300 px-4"></td>
        
        <% red_or_green = @pl > 0 ? 'text-green-600' : 'text-red-600' %>
        <td class="border border-slate-300 px-4 text-red-600">-<%= number_to_currency(@tr_cost) %></td>
        <td class="border border-slate-300 px-4 <%= red_or_green %>"><%= number_to_currency(@pl) %></td>
        <td class="border border-slate-300 px-4"><%= number_to_currency(@total_portfolio_value) %></td>
        <td class="border border-slate-300 px-4"></td>
      </tr>
    </tfoot>
  </table>

  <span class="my-5 block">
    <span class="block font-medium mb-1 inline-block">Portfolio Balance:</span>
    <% portfolio.cash == nil ? portfolio.cash = 0 : portfolio.cash %>
    <span class="font-bold"><%= number_to_currency(@total_portfolio_value) %></span>
  </span>

  <% @total_day_gain = 0 %>
  <% @total_position_gain = 0 %>
  <% @total_portfolio_value = 0 %>

  <% if action_name != "show" %>
    <%= link_to "Show", "/users/#{current_user.id}/portfolios/#{portfolio.id}", class: "rounded-lg py-1 px-3 bg-cyan-300 inline-block font-medium" %>
    <%= link_to 'Edit', "/users/#{current_user.id}/portfolios/#{portfolio.id}/edit", class: "rounded-lg py-1 ml-2 px-3 bg-cyan-500 inline-block font-medium" %>
    <%= link_to 'New position', "/users/#{current_user.id}/portfolios/#{portfolio.id}/positions/new", class: "rounded-lg ml-2 py-1 px-3 inline-block bg-blue-600 text-white block font-medium" %>
    <%= link_to 'New transaction', "/users/#{current_user.id}/portfolios/#{portfolio.id}/transactions/new", class: "rounded-lg ml-2 py-1 px-3 inline-block bg-blue-800 text-white block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
